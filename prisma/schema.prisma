generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(cuid())
  email       String  @unique
  name        String?
  password    String
  phonenumber String
  isAdmin     Boolean @default(false)
}

model Car {
  id          String @id @default(cuid())
  name        String
  brand       String
  model       String
  year        Int
  price       Float
  image       String
  description String
  make        String
}
